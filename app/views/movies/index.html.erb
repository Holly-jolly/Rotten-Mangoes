<div class="container">
  <div class="row">
    <div class="header">
      <h1>Rotten Mangoes </h1>
    </div>
    
  </div>
    <div class="row">
      <br></br>
      <%= render 'search' %> 
    </div>
      <div class='row'>
        <button class="btn btn-default"><%= link_to "Submit your favourite movie!",new_movie_path %></button>
      </div>
    </div>  
    <br></br>
    <div class="row">
      <% @movies.each do |movie| %> 
        <div class="col-md-4">
          <%= link_to image_tag(movie.avatar_url(:thumb).to_s) || movie_path(movie) %>
            <h2><%= link_to movie.title, movie_path(movie) %></h2>
              <h3><%= formatted_date(movie.release_date) %></h3>
                <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes| Average review: <%= movie.review_average %>/10</h4>
                  <p><%= movie.description %></p>
        </div>         
      <% end %> 
    </div>
    
</div> 